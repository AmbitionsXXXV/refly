{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    // path
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@refly-packages/ai-workspace-common/*": ["./src/*"],
      "@refly-packages/editor-component/*": ["../editor-common/src/components/*"],
      "@refly-packages/editor-core/*": ["../editor-common/src/headless-core/*"],
      "@refly-packages/utils/*": ["../utils/src/*"],
      "@refly/utils/*": ["../utils/src/*"]
    },
    "composite": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../editor-common/tsconfig.json" },
    { "path": "../utils/tsconfig.json" }
  ]
}
